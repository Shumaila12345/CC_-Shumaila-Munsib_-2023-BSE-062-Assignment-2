# This is an example file. 
# Rename this to terraform.tfvars and fill in your actual values before running.

vpc_cidr_block     = "10.0.0.0/16"
subnet_cidr_block  = "10.0.10.0/24"
availability_zone  = "us-east-1a"
env_prefix         = "prod"
instance_type      = "t3.micro"

# Use placeholders for paths to avoid exposing local directory structures
public_key         = "path/to/your/id_ed25519.pub"
private_key        = "path/to/your/id_ed25519"

backend_servers = [
  {
    name        = "web-1"
    script_path = "./scripts/apache-setup.sh"
  },
  {
    name        = "web-2"
    script_path = "./scripts/apache-setup.sh"
  },
  {
    name        = "web-3"
    script_path = "./scripts/apache-setup.sh"
  }
]